{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id" : "https://corelib.org/sprite_schema.json",
    "title": "Sprite",
    "description": "Defines Unity sprite resource",
    "type" : "object",
    "definitions": {
        "iconTypes": {
            "enum": [ "icon-top", "icon-bottom" ]
        }
    },
    "properties": {
        "path" : {
            "type" : "string",
            "description": "Path relative to 'resources' folder"
        },
        "type" : {
            "type" : "string",
            "description": "Shorthand sprite type",
            "anyOf": [
                { "$ref": "#/definitions/iconTypes" }
            ]
        },
        "rect" : {
            "type" : "object",
            "properties": {
                "x" : {
                    "type" : "number"
                },
                "y" : {
                    "type" : "number"
                },
                "width" : {
                    "type" : "number"
                },
                "height" : {
                    "type" : "number"
                }
            },
            "required": [ "x", "y", "width", "height" ]
        }
    },
    "required": [ "path" ]
}